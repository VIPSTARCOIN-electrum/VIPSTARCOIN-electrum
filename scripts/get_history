#!/usr/bin/env python3

import sys
from electrum import Network
from electrum.util import json_encode, print_msg
from electrum import vipstarcoin

try:
    addr = sys.argv[1]
except Exception:
    print("usage: get_history <vipstarcoin_address>")
    sys.exit(1)

n = Network()
n.start()
_hash = vipstarcoin.address_to_scripthash(addr)
h = n.synchronous_get(('blockchain.scripthash.get_history', [_hash]))
print_msg(json_encode(h))
